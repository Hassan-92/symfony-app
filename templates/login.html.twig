{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Login {{ title }}</h1>

    {% if error %}
        <div class="alert alert-danger mt-2 mb-2 p-2">
            {{ error.message }}
        </div>

    {% endif %}
    <form method="post" action="{{ path(action) }}">
        <div class="form-group">
            <label>Identifiant</label>
            <input type="text" name="_username" class="form-control" value="{{ userName }}">
        </div>
        <div class="form-group">
            <label>Mot de passe</label>
            <input type="password" name="_password" class="form-control">
        </div>
        <button class="btn btn-primary btn-block" type="submit">
            Connexion
        </button>
    </form>

{% endblock %}

