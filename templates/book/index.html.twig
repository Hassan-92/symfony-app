{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
    <h1>Liste des livres</h1>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Prix</th>
            <th>Editeur</th>
        </tr>

        {% for book in bookList %}

            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.price }}</td>
                <td>{{ book.publisher }}</td>

            </tr>

        {% endfor %}
    </table>
{% endblock %}
